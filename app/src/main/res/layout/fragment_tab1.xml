<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.View.Tab1Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlan Adı"
            android:textSize="24dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/reviewIlanAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deneme İlanı"
            android:maxLines="1"
            android:textSize="24dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlan Kategorisi"
            android:textSize="24dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/reviewKategori"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="Televizyon-Samsung"
            android:textSize="24dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlan Fiyatı"
            android:textSize="24dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/reviewFiyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="24dp"
            android:layout_marginStart="68dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/imagePara"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:src="@drawable/franc"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlana Git"
            android:textSize="24dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/reviewLink"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="www.google.com"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textSize="24dp"
            android:layout_marginStart="81dp"
            android:textColor="@color/black"/>
    </LinearLayout>



</LinearLayout>